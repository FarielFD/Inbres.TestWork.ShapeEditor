<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:GraphicShapeEditor.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="GraphicShapeEditor.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="ShapesEditor">

    <Grid RowDefinitions="Auto, *">
       <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0">
            <Button Content="Delete" Width="80" Margin="4" 
                    Command="{Binding DeleteCommand}"/>
            <Button Content="Select shape" Width="110" Margin="4"
                    Command="{Binding SelectedShapeCommand}"/>
            <Button Content="Add rectangle" Width="110" Margin="4" 
                    Command="{Binding AddRectangleCommand}"/>
            <Button Content="Add ellipse" Width="100" Margin="4"
                    Command="{Binding AddEllipseCommand}"/>
        </StackPanel>

        </Grid>
</Window>
